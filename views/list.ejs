           <div class="col ">
          <p  style="margin-top: 13%;" ><%= additem[i] %></p> </div>
          <div class="col  ">
            <div style="margin-left: 45%;" >
          <form   action="/delete"   method="post"><input  name="inpclick"  class="qsd" style="display: none;" value="0"><button class="btn"  type="submit" name=dbutton id="delbut" value=<%=i%> ><i class="fa-solid fa-circle-minus"></i> </button>
          </form></div> </div>
        
        </div> </div>
            <% } %> 
           
           
   
       
  

         





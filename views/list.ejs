      <ul>
        
     <% var listarray = alllists;   %>
     <%   var n1 = listarray.length %>
        
    <% for(var xs=0; xs<n1 ;xs++) { %>     
      <li  onclick="document.getElementById('<%=(listarray[xs]+xs) %>').submit();">
            
        
          <%=listarray[xs]  %>  
        <form   action="/createorsearch"   method="post" id='<%=(listarray[xs]+xs) %>' >   
          <input type="text" value='<%=listarray[xs] %>'      style="display: none;  " name="searchorcreatet">
           </form> 
            
             
           <form   action="/deletelist"   method="post"><input    name="deletelt"  style="display: none;" value='<%=listarray[xs] %>' >    <button class="btn "   type="submit"  ><i class="fa-solid fa-circle-minus"></i> </button> 
           </form>
            
      
          </li>
        <% } %> 
        
         
      </ul>
